<div id="backgroundImg" background="/images/sky.jpg"></div>
<div id="blogs" class="inactive">
  <% blogs.forEach(function(blog) { %>
  <% if(blog.attributes.sotd == 1) { %>
    <div id="songOfTheDay" data-vid="<%=blog.attributes.vid%>">
      <div id="sotdImg">
      <img src="/images/<%=blog.attributes.vid%>.png" class="list" onerror="replaceImg(event)"/>
      <div id="sotdCover">
        <div id="sotdName"><%=blog.attributes.name %></div>
        <div id="sotdArtist"><%=blog.attributes.artist %></div>
        <div id="sotdPlay"><span class="glyphicon glyphicon-play"></span></div>
      </div>
      </div>
      <div id="sotdBlogText"><%=blog.attributes.text %></div>
    </div>
  <% } }); %>
  <div id="staffPicksBanner">Recent Staff Picks</div>
  <div id="staffPicks">
  <% blogs.forEach(function(blog) { %>
    <% if(blog.attributes.sotd != 1) { %>
      <div class="post">
        <div class="block" data-vid="<%=blog.attributes.vid %>" onmousedown="blockClick(event)">
          <img src="/images/<%=blog.attributes.vid%>.png" class="list" onerror="replaceImg(event)"/>
          <span class="glyphicon glyphicon-play"></span>
        </div>
        <div class="blogName"><%=blog.attributes.name %></div>
        <div class="blogArtist"><%=blog.attributes.artist %></div>
        <div class="blog"><%=blog.attributes.text %></div>
        <% if(blog.attributes.artist && blog.attributes.artistLink) { %>
          <div class="artistLink" onclick="window.open('<%=blog.attributes.artistLink %>','artistpage');"><%=blog.attributes.artist %></div>
        <% } %>
        <% if(blog.attributes.director && blog.attributes.directorLink) { %>
          <div class="directorLink" onclick="window.open('<%=blog.attributes.directorLink %>','directorpage');"><%=blog.attributes.director %></div>
        <% } %>
      </div>
    <% } %>
  <% }); %>
  </div>
</div>
<script> loadBlogs() </script>